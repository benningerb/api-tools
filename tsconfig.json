{
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "lib": ["es5", "es6", "esnext"],
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ]
  },
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "coverage",
    "dist",
    "node_modules",
    ".webpack",
    "ts-node**"
  ]
}
