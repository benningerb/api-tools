{
  "name": "api-tools",
  "version": "0.0.1",
  "description": "Provides a universal set of standardized tools for building node webservices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/benningerb/api-tools.git",
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && yarn build:parsers && tsc -p . && yarn lint",
    "build:parsers": "for f in $(find ./src/lib -type f -name '*.pegjs'); do pegjs --optimize speed --format commonjs -o \"$(dirname $f)/$(basename $f | sed 's/\\.pegjs$//')-parser.js\" $f; done",
    "lint": "tslint \"**/*.ts\" --project .",
    "test": "LOG_LEVEL=debug EXPOSE_STACK=true IDM_CLIENT_ID=mockClientId jest",
    "pretest": "yarn build:parsers",
    "watch": "tsc -w -p .",
    "pre-commit": "yarn build && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit"
    }
  },
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^7.4.3",
    "axios": "^0.19.0",
    "http-errors": "^1.7.3",
    "http-status-codes": "^1.3.2",
    "koa": "^2.8.1",
    "koa-router": "^7.4.0",
    "nconf": "^0.10.0",
    "pino": "^5.13.2",
    "pino-pretty": "^3.2.1",
    "query-string": "^6.8.3",
    "shortid": "^2.2.15",
    "tsoa": "^2.5.1",
    "util": "^0.12.1"
  },
  "devDependencies": {
    "@types/hapi__boom": "^7.4.1",
    "@types/http-errors": "^1.6.2",
    "@types/jest": "^24.0.15",
    "@types/koa": "^2.0.49",
    "@types/koa-router": "^7.0.42",
    "@types/nconf": "^0.10.0",
    "@types/node": "^12.6.8",
    "@types/pino": "^5.8.10",
    "@types/shortid": "^0.0.29",
    "axios-mock-adapter": "^1.17.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "mkdirp": "^0.5.1",
    "pegjs": "^0.10.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3",
    "typescript-tslint-plugin": "^0.5.4",
    "utility-types": "^3.7.0"
  }
}
